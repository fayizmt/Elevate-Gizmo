    continueButton.addEventListener('click', () => {
        fetch('/payment', { method: 'GET' })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.text();
            })
            .then(data => {
                // Assuming the response data contains HTML for the payment section
                document.getElementById('payment').innerHTML = data;
                // Optionally, you can add code here to initialize any JavaScript functionality in the payment section
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
            });
    });
