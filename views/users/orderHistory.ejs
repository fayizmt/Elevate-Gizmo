<body>
    <div class="container">
        <h1>Your Order History</h1>

        <div class="order">
            <div class="order-info">
                <i class="fas fa-shopping-cart"></i>
                <p>Order ID: <%= obj._id %></p>
            </div>
            <div class="order-details">
                <p>Purchased on: <%= newdate %></p>
                <p>Status: <%= obj.orderStatus.toUpperCase() %></p>
            </div>
        </div>

        <div class="products">
            <% product.forEach((data, index) => { %>
                <div class="product" style="height: 150px;width: 150px;">
                    <img src="/images/products/<%= data.image %>" alt="<%= data.name %>">
                    <div class="product-info">
                        <p><%= data.name %></p>
                        <p>Price: ₹ <%= data.price %></p>
                        <p>Quantity: <%= data.quantity %></p>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="status">
            <div>
                <div class="circle <%= obj.orderStatus === 'Placed' ? 'active' : '' %>"></div>
                <p>Placed</p>
            </div>
            <div>
                <div class="circle <%= obj.orderStatus === 'Shipped' ? 'active' : '' %>|| <%= obj.orderStatus === 'Out for Delivery' ? 'active' : '' %>""></div>
                <p>Shipped</p>
            </div>
            <div>
                <div class="circle <%= obj.orderStatus === 'Delivered' ? 'active' : '' %>"></div>
                <p>Delivered</p>
            </div>
        </div>

        <div class="payment-info">
            <p>Payment Method: <%= obj.paymentOption %></p>
            <p>Total Amount: ₹ <%= obj.totalAmount %></p>
        </div>

        <div class="total">
            Total Amount: ₹ <%= obj.totalAmount %>
        </div>

        <% if (obj.orderStatus === 'Placed'||obj.orderStatus === 'Shipped') { %>
            <button class="cancel-btn" onclick="confirmCancellation('<%= obj._id %>')">Cancel Order</button>
        <% } %>
        <input type="hidden" id="statusInput" value="<%= obj.orderStatus %>" />

        <% if(obj.orderStatus==="Delivered") { %>
            <div class="ml-auto align-self-end">
                <div>
                    <% var hasReview = false; %>
                    <% review.forEach(function(reviewItem) { %>
                    <% if (reviewItem.productId.equals(obj.product._id)) { %>
                    <% hasReview = true; %>
                    <% } %>
                    <% }); %>
    
                    <% if (hasReview) { %>
                    <button type="button" class="review-btn btn btn-success btn-sm mt-2" data-toggle="modal"
                        data-target="#editreviewModal" onclick="editreview('<%= obj.product._id %>','<%= obj._id %>')">Edit Review</button>
                       <% } else { %>
                         <button type="button" class="btn btn-success btn-sm mt-2" data-toggle="modal" onclick="getProductId('<%= obj.product._id %>','<%= obj._id %>')" data-target="#reviewModal">Leave a Review</button>
                       <% } %>
                       <% } %>
    </div>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <script src="/user/js/orderHistory.js"></script>
</body>
