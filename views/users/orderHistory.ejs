            margin-bottom: 20px;
            color: #007bff;
        }

        .order {
            border-bottom: 1px solid #ccc;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }

        .order-info {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .order-info i {
            font-size: 20px;
            margin-right: 10px;
            color: #007bff;
        }

