            align-items: center;
        }

        .order-details p {
            margin: 5px 0;
        }

        .products {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
            margin-bottom: 80px;
        }

        .product {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 10px;
        }

        .product img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }

        .product-info {
            margin-top: 10px;
        }

        .product-info p {
            margin: 5px 0;
        }

        .status {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .status div {
            text-align: center;
            flex: 1;
        }

        .status p {
            margin: 5px 0;
        }

        .status .circle {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background-color: #ccc;
            display: inline-block;
        }

        .status .circle.active {
            background-color: #007bff;
        }

        .payment-info {
            margin-bottom: 20px;
        }

        .payment-info p {
            margin: 5px 0;
        }

        .total {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .cancel-btn {
            padding: 10px 20px;
            background-color: #ff4500;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .cancel-btn:hover {
            background-color: #cc3700;
        }
