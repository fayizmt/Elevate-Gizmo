            <script>



                function removeCoupon(id) {
                    fetch(`/coupon/${id}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    })
                    .then(response => {
                        if (response.ok) {
                            return response.json();
                        }
                        throw new Error('Network response was not ok.');
                    })
                    .then(data => {
                        console.log(data);
            
                        // Assuming you want to remove the row containing the removed coupon
                        const rowToRemove = document.querySelector(`.row-${id}`);
                        if (rowToRemove) {
                            rowToRemove.remove();
                        }
            
                        Swal.fire('Success', 'Coupon removed successfully!', 'success');
                    })
                    .catch(error => {
                        console.error('There was a problem removing the coupon:', error);
                        // Optionally show an error message or handle the error
                        Swal.fire('Error', 'Failed to remove coupon.', 'error');
                    });
                }
            </script>
            
            
